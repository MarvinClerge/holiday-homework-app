<h3 class="text-center">Create Account</h3>

<%= form_for @user do |f| %>
  <!-- USERNAME -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>User Name</h5>
      <%= f.text_field :username, class: 'form-control' %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- PASSWORD -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>Password</h5>
      <%= f.text_field :password, class: 'form-control' %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- PASSWORD CONFIRM -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>Confirm Password</h5>
      <%= f.text_field :password_confirmation, class: 'form-control' %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- NAME -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>Display Name</h5>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- EMAIL -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>Email</h5>
      <%= f.text_field :email, class: 'form-control' %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- BIO -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>About You</h5>
      <%= f.text_area :bio, class: 'form-control', rows: 5 %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- COLOR -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <h5>Prefered Color</h5>
    </div>
    <div class="col-2"></div>
  </div>

  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <%= f.radio_button(:color, "blue") %>
      <%= f.label(:color, "Blue") %>

      <%= f.radio_button(:color, "red") %>
      <%= f.label(:color, "Red") %>

      <%= f.radio_button(:color, "green") %>
      <%= f.label(:color, "Green") %>

      <%= f.radio_button(:color, "yellow") %>
      <%= f.label(:color, "Yellow") %>
    </div>
    <div class="col-2"></div>
  </div>

  <br>

  <!-- SUBMIT -->
  <div class="row">
    <div class="col-2"></div>
    <div class="col">
      <%= f.submit "Save Changes", class: "btn-block bg-primary text-white"%>
      <br><br>
    </div>
    <div class="col-2"></div>
  </div>



<% end %>
